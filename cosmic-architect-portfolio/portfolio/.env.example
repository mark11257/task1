# Database Configuration
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/cosmic_portfolio"
DATABASE_NAME="cosmic_portfolio"

# Authentication (NextAuth.js)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Email Service (Resend - recommended)
RESEND_API_KEY="re_xxxxxxxxxx"
SMTP_FROM_EMAIL="noreply@yourdomain.com"
SMTP_FROM_NAME="The Cosmic Architect"

# Alternative Email Service (SendGrid)
# SENDGRID_API_KEY="SG.xxxxxxxxxx"
# SENDGRID_FROM_EMAIL="noreply@yourdomain.com"

# Analytics & Tracking
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
GOOGLE_SITE_VERIFICATION="your-verification-code"

# Site Configuration
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SITE_NAME="The Cosmic Architect"

# Security & Rate Limiting
RATE_LIMIT_SECRET="another-secret-for-rate-limiting"

# Admin Configuration
ADMIN_EMAIL="admin@yourdomain.com"
ADMIN_PASSWORD="change-this-secure-password"

# Optional: Third-party Integrations
# GITHUB_TOKEN="ghp_xxxxxxxxxx"  # For fetching GitHub repos
# LINKEDIN_ACCESS_TOKEN="xxxxxxxxxx"  # For LinkedIn integration
# DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."  # For notifications

# Development/Debug
NODE_ENV="development"
NEXT_PUBLIC_DEBUG="false"